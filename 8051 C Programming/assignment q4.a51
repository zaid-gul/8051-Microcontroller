ORG 0000H
MOV DPTR,#200H
HERE:
ORL P0,#0FH
ANL P0,#0FH
MOV A,P0
MOVC A,@A+DPTR
CALL CHECK
JMP HERE
ORG 200H
DB 0D,1D,4D,9D,16D,25D,36D,49D,64D,81D,100D,121D,144D,169D,196D,225D
CHECK:
CJNE A,#100,NOT_EQ
MOV P3,A     ; displaying on port 3  A=100
RET
NOT_EQ:      ; if  A<100    
JC LESS_THAN  
MOV P1,A    ;   displaying on port 1  A>100
RET
LESS_THAN:
MOV P3,A    ;   displaying on port 3  A<100
RET
END