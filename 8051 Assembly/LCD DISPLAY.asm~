ORG 00H
MOV A,#38H
CALL CMD
MOV A,#0EH
CALL CMD
MOV A,#01H
CALL CMD
MOV A,#06H
CALL CMD
MOV A,#0EH
CALL CMD
MOV A ,#82H
CALL CMD
MOV A,#'H'
CALL DATA
CALL DELAY
MOV A ,#83H
CALL CMD
MOV A,#'E'
CALL DATA
CALL DELAY
MOV A ,#84H
CALL CMD
MOV A,#'L'
CALL DATA
CALL DELAY
MOV A ,#85H
CALL CMD
MOV A,#'L'
CALL DATA
CALL DELAY
MOV A ,#86H
CALL CMD
MOV A,#'O'
CALL DATA
CALL DELAY
MOV A ,#0C5H
CALL CMD
MOV A,#'U'
CALL DATA
CALL DELAY
MOV A ,#0C6H
CALL CMD
MOV A,#'E'
CALL DATA
CALL DELAY
MOV A ,#0C7H
CALL CMD
MOV A,#'T'
CALL DATA
CALL DELAY
CMD:
MOV P1,A
MOV P2.0,#0
MOV P2.1,#0
MOV P2.2,#1
CALL DELAY
MOV P2.2,#0
RET
DATA:
MOV P1,A
MOV P2.0,#1
MOV P2.1,#0
MOV P2.2,#1
CALL DELAY
MOV P2.2,#0
RET
DELAY: MOV R4,#05H ; subroutine for delay 1/2 sec
WAIT1: MOV R3,#00H
WAIT2: MOV R2,#00H
WAIT3: DJNZ R2,WAIT3     ; decrement and jump if not zero     (255 times)
DJNZ R3,WAIT2             ; decrement and jump if not zero 
DJNZ R4,WAIT1         ; decrement and jump if not zero 
RET  
END

